<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:layout_width="50dp"
                                       android:id="@+id/icon_bg"
                                       android:layout_height="50dp"
                                       app:cardCornerRadius="25dp"
                                       android:layout_margin="16dp"
                                       app:cardBackgroundColor="#6B1F1F1F"
                                       app:cardElevation="0dp"
    />

    <ImageView
            android:src="@drawable/ic_octicons_repo"
            android:tint="#F01F1F1F"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="29dp"
            android:layout_marginStart="29dp"

    />

    <TextView
            android:id="@+id/lib_name"
            android:text="Ashish"
            android:textStyle="bold"
            android:layout_alignTop="@id/icon_bg"
            android:layout_toEndOf="@id/icon_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/lib_desc"
            android:text="Ashish"
            android:layout_marginTop="4dp"
            android:layout_below="@id/lib_name"
            android:textSize="12sp"
            android:layout_toEndOf="@id/icon_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>